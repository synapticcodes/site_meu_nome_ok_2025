---
type PressContent = typeof import('@content/home').press;

interface Props {
  content: PressContent;
}

const { content } = Astro.props;
---
<section class="bg-white">
  <div class="relative isolate overflow-hidden">
    <div class="absolute inset-x-0 top-0 h-28 bg-gradient-to-b from-primary/10 via-white to-transparent" aria-hidden="true" />
    <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-12 px-6 py-20">
      <div class="max-w-2xl space-y-4">
        <span class="text-xs font-semibold uppercase tracking-[0.32em] text-primary/80">Estamos na m√≠dia</span>
        <h2 class="text-h3 text-neutral-900">{content.title}</h2>
        <p class="text-neutral-600">{content.description}</p>
      </div>
      <div class="grid gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
        {content.logos.map((logo) => (
          <a
            href={logo.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-24 items-center justify-center rounded-2xl border border-white/70 bg-white/90 p-4 shadow-[0_20px_60px_-45px_rgba(17,24,39,0.45)] backdrop-blur transition duration-200 hover:-translate-y-1 hover:shadow-[0_26px_70px_-40px_rgba(17,24,39,0.45)]"
            aria-label={logo.name}
          >
            <img
              src={logo.src}
              alt={logo.alt}
              loading="lazy"
              class="mx-auto h-[52px] w-auto object-contain"
              style={{ maxWidth: '140px' }}
            />
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
