---
type TrustContent = typeof import('@content/home').trustSection;

interface Props {
  content: TrustContent;
}

const { content } = Astro.props;
---
<section aria-label="Parceiros" class="bg-white">
  <div class="mx-auto flex w-full max-w-6xl flex-col gap-10 px-6 py-12">
    <div class="flex flex-col items-center gap-3 text-center">
      <p class="text-sm font-semibold uppercase tracking-wide text-primary">Confian√ßa comprovada</p>
      <h2 class="text-h3">{content.title}</h2>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-4">
      {content.logos.map((logo) => (
        <div class="flex items-center justify-center rounded-3xl border border-neutral-100 bg-neutral-50 p-6 shadow-sm">
          <img src={logo.src} alt={logo.alt} class="max-h-12 w-auto object-contain" loading="lazy" />
        </div>
      ))}
    </div>
  </div>
</section>
