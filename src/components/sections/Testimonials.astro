---
type TestimonialsContent = typeof import('@content/home').testimonials;

interface Props {
  content: TestimonialsContent;
}

const { content } = Astro.props;
---
<section id="depoimentos" class="bg-white">
  <div class="mx-auto flex w-full max-w-6xl flex-col gap-12 px-6 py-20">
    <div class="max-w-2xl space-y-4">
      <span class="text-sm font-semibold uppercase tracking-wide text-primary">Confiança</span>
      <h2>{content.title}</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {content.items.map((item) => (
        <article class="flex h-full flex-col gap-4 rounded-3xl border border-neutral-100 bg-neutral-50 p-8 shadow-sm">
          <p class="text-neutral-600">“{item.content}”</p>
          <div>
            <p class="font-semibold text-neutral-800">{item.name}</p>
            <p class="text-sm text-neutral-500">{item.role}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
