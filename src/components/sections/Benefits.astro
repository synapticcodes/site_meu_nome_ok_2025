---
interface BenefitItem {
  title: string;
  description: string;
}

interface Props {
  content: {
    title: string;
    description: string;
    items: readonly BenefitItem[];
  };
}

const benefitIcons = [
  '/images/icons/icon-benefit-1.webp',
  '/images/icons/icon-benefit-2.webp',
  '/images/icons/icon-benefit-3.webp'
];

const { content } = Astro.props as Props;
---
<section id="beneficios" class="bg-white">
  <div class="relative isolate overflow-hidden">
    <div class="absolute inset-x-0 top-0 h-40 bg-gradient-to-b from-primary/12 via-transparent to-transparent" aria-hidden="true" />
    <div class="relative mx-auto grid w-full max-w-6xl gap-12 px-6 py-24 lg:grid-cols-[0.9fr_1.1fr]">
      <div class="flex flex-col gap-6">
        <span class="text-xs font-semibold uppercase tracking-[0.3em] text-primary/80">Por que confiar</span>
        <h2 class="text-h2 text-neutral-900">{content.title}</h2>
        <p class="text-neutral-600">{content.description}</p>
        <div class="flex items-center gap-4 rounded-3xl border border-primary/20 bg-gradient-to-br from-primary/10 via-white to-white p-6 shadow-[0_22px_50px_-35px_rgba(102,42,231,0.65)]">
          <div>
            <p class="text-sm font-semibold text-primary">Cobertura completa</p>
            <p class="mt-2 text-sm text-neutral-600">
              CPF e CNPJ analisados com segurança e acompanhamento dedicado até a quitação da dívida.
            </p>
          </div>
        </div>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        {content.items.map((item, index) => (
          <article class="group relative flex flex-col gap-4 overflow-hidden rounded-3xl border border-white/70 bg-white/85 p-8 shadow-[0_30px_60px_-45px_rgba(102,42,231,0.6)] backdrop-blur transition duration-200 hover:-translate-y-1 hover:shadow-[0_40px_80px_-40px_rgba(102,42,231,0.4)]">
            <div class="absolute -top-10 right-0 h-28 w-28 rounded-full bg-primary/15 blur-3xl opacity-0 transition-opacity duration-200 group-hover:opacity-100" aria-hidden="true" />
            <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-primary/10">
              <img src={benefitIcons[index % benefitIcons.length]} alt={`Ícone representando ${item.title}`} class="h-8 w-8 object-contain" loading="lazy" />
            </span>
            <h3 class="text-h4 text-neutral-900">{item.title}</h3>
            <p class="text-neutral-600">{item.description}</p>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
