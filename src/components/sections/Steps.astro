---
type StepsContent = typeof import('@content/home').steps;

interface Props {
  content: StepsContent;
}

const iconPaths = [
  '/images/icons/icon-steps-1.webp',
  '/images/icons/icon-steps-2.webp',
  '/images/icons/icon-steps-3.webp',
  '/images/icons/icon-steps-4.webp'
];

const { content } = Astro.props;
---
<section id="como-funciona" class="relative isolate overflow-hidden bg-neutral-50">
  <div class="absolute inset-0 bg-gradient-to-b from-white via-neutral-50 to-white" aria-hidden="true" />
  <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-14 px-6 py-24">
    <div class="max-w-2xl space-y-4">
      <span class="text-xs font-semibold uppercase tracking-[0.3em] text-primary/80">Etapas</span>
      <h2 class="text-h2 text-neutral-900">{content.title}</h2>
      <p class="text-neutral-600">{content.description}</p>
    </div>
    <ol class="relative grid gap-8 md:grid-cols-2">
      <span class="pointer-events-none absolute left-[calc(3rem+1.5px)] top-4 hidden h-[calc(100%-2rem)] w-px bg-gradient-to-b from-primary/20 via-primary/30 to-transparent md:block" aria-hidden="true"></span>
      {content.items.map((step, index) => (
        <li class="group relative flex flex-col gap-4 rounded-3xl border border-white/70 bg-white/85 p-8 shadow-[0_30px_60px_-45px_rgba(102,42,231,0.6)] backdrop-blur transition duration-200 hover:-translate-y-1 hover:shadow-[0_40px_80px_-42px_rgba(102,42,231,0.4)]">
          <div class="flex items-center gap-4">
            <span class="relative flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-br from-primary to-primary-dark text-lg font-semibold text-white shadow-[0_12px_24px_-12px_rgba(102,42,231,0.9)]">
              {step.step}
              <span class="pointer-events-none absolute -bottom-8 left-1/2 hidden h-16 w-px -translate-x-1/2 bg-gradient-to-b from-primary/60 to-transparent md:block" aria-hidden="true"></span>
            </span>
            <div class="hidden h-12 w-12 items-center justify-center rounded-2xl bg-primary/10 sm:flex">
              <img src={iconPaths[index % iconPaths.length]} alt={`Ícone da etapa ${index + 1}`} class="h-7 w-7 object-contain" loading="lazy" />
            </div>
            <div>
              <h3 class="text-h4 text-neutral-900">{step.title}</h3>
              <p class="text-xs uppercase tracking-wide text-primary/70">Etapa {index + 1}</p>
            </div>
          </div>
          <p class="text-neutral-600">{step.description}</p>
        </li>
      ))}
    </ol>
  </div>
</section>
