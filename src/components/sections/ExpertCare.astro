---
interface Props {
  content: {
    eyebrow: string;
    title: string;
    paragraphs: readonly string[];
    highlights: readonly string[];
  };
}

const { content } = Astro.props as Props;
---
<section aria-labelledby="expert-care-title" class="bg-white">
  <div class="relative isolate overflow-hidden">
    <div class="absolute inset-x-0 top-0 h-32 bg-gradient-to-b from-primary/10 via-white to-transparent" aria-hidden="true" />
    <div class="absolute -right-24 top-10 h-60 w-60 rounded-full bg-primary/10 blur-3xl" aria-hidden="true" />
    <div class="absolute -left-24 bottom-0 h-56 w-56 rounded-full bg-primary/5 blur-3xl" aria-hidden="true" />
    <div class="relative mx-auto grid w-full max-w-6xl items-center gap-12 px-6 py-24 lg:grid-cols-[1.05fr_0.95fr]">
      <div class="flex flex-col gap-6">
        <span class="text-xs font-semibold uppercase tracking-[0.3em] text-primary/80">{content.eyebrow}</span>
        <h2 id="expert-care-title" class="text-h2 text-neutral-900">{content.title}</h2>
        <div class="flex flex-col gap-4 text-neutral-600">
          {content.paragraphs.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>
      <div class="relative">
        <div class="absolute -top-10 -right-8 h-36 w-36 rounded-full bg-primary/15 blur-3xl" aria-hidden="true" />
        <div class="relative overflow-hidden rounded-[2rem] border border-white/70 bg-white/95 p-8 shadow-[0_32px_80px_-50px_rgba(102,42,231,0.55)] backdrop-blur">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-white/60 to-white/90" aria-hidden="true" />
          <div class="relative flex flex-col gap-5">
            {content.highlights.map((highlight) => (
              <div class="flex items-start gap-3 rounded-2xl border border-primary/20 bg-white/80 p-4 shadow-[0_18px_50px_-36px_rgba(102,42,231,0.45)]">
                <span class="mt-1 flex h-9 w-9 items-center justify-center rounded-full bg-primary/10 text-primary">
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.7" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m5 10 3 3L15 6" />
                  </svg>
                </span>
                <p class="text-sm text-neutral-700">{highlight}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
